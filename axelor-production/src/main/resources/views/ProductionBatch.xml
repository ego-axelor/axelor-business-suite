<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">
	
	
	<grid name="production-batch-grid" title="Production batches" model="com.axelor.apps.production.db.ProductionBatch">
		<field name="code"/>
		<field name="actionSelect"/>
		<field name="company"/>
		<field name="description"/>
	</grid>
	
	<form name="production-batch-form" title="Production batch" model="com.axelor.apps.production.db.ProductionBatch">
		<panel name="main" >
    		<field name="actionSelect"/>
    		<field name="code"/>
    		<field name="company" canEdit="false" widget="SuggestBox" form-view="company-form" grid-view="company-grid"/>
			<button name="productionBatch" title="Production batch" onClick="save,action-production-batch-method-slow-plan"/>
  		</panel>
  		
  		 <panel-tabs>
    		<panel name="information" title="Information" >
      			<field name="createdOn" title="Created on"/>
      			<field name="createdBy" title="Created by" form-view="user-form" grid-view="user-grid"/>
      			<field name="description" colSpan="12" />
      			<panel-related field="batchList" colSpan="12" form-view="batch-form" grid-view="batch-grid" readonly="true"/>
    		</panel>
  		</panel-tabs>
		
	</form>

    <!-- ACTION METHOD -->
	<action-method name="action-production-batch-method-slow-plan">
		<call class="com.axelor.apps.production.web.ProductionBatchController" method="plan"/>
	</action-method>

</object-views>
